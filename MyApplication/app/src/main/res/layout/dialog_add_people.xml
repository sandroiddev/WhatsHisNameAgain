<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Primary">

    <EditText
        android:id="@+id/activity_add_people_edtxFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:hint="First Name"
        android:elegantTextHeight="true"
        android:inputType="textPersonName"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent" />

    <EditText
        android:id="@+id/activity_add_people_edtxLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:hint="Last Name"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:elegantTextHeight="true" />

    <EditText
        android:id="@+id/activity_add_people_edtxBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:hint="Birthday"
        android:inputType="date"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:maxLines="1"
        android:elegantTextHeight="true" />

    <EditText
        android:id="@+id/activity_add_people_edtxZipCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:hint="Zip Code"
        android:inputType="number"
        android:elegantTextHeight="true"
        android:lines="1"
        android:maxLength="5"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent" />


</LinearLayout>